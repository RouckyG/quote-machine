{% extends 'base.html.twig' %}

{% block title %}Quotes{% endblock %}
{% block style %}

    .quote {
    padding : 5px;
    }
    .meta {
    color : darkgray;
    font-style : italic;
    }
{% endblock %}
{% block body %}

    <h1> Liste des citations</h1>

    <form method="GET">
        <label><input type="text" name="search" value={{ search }} ></label>
        <input type="submit" />
    </form>

    {% if quotes == [] %}
    <p> Aucune citation ne correspond Ã  votre recherche.</p>
    {% endif %}
    {% for quote in quotes %}
        <ul class="quote">
    <div class="content">"{{ quote.content }}"</div>
        <div class="meta"> - {{ quote.meta }}</div>
        </ul>
    {% endfor %}

{% endblock %}