{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block style %}

    .quote {
    padding : 5px;
    }
    .meta {
    color : darkgray;
    font-style : italic;
    }
    td {
    border-style : solid;
    border-width : 1px;
    padding : 5px;
    }
{% endblock %}

{% block body %}
    <a href="{{  path('quotes') }}">Vers les citations</a>
    <h1>Categorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
                <th>nombre de citation</th>
                <th>citations</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">afficher</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">modifier</a>
                    {{ include('category/_delete_form.html.twig') }}
                </td>

                <td>{{  category.quotes|length }} </td>
                <td>
                {% for quote in category.quotes %}
                    <div class="quote">
                       <div class="content" >{{ quote.content }}</div>
                        <div class="meta">{{ quote.meta }} </div>
                    </div>
                {%  endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Ajouter une nouvelle cat√©gorie</a>
{% endblock %}
