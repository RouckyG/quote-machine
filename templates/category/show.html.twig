{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block style %}

.quote {
padding : 5px;
}
.meta {
color : darkgray;
font-style : italic;
}
{% endblock %}
{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
        <tr>
            <th>citations</th>
            <td>
                {% for quote in category.quotes %}
                    <div class="quote">
                        <div class="content" >{{ quote.content }}</div>
                        <div class="meta">{{ quote.meta }} </div>
                    </div>
                {%  endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
